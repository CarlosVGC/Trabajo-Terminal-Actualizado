<InsertCatWid>:
    orientation: 'vertical'
    hoy: ''
    canvas:
        Color:
            rgb: (172/255,165/255,163/255)
        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        text: "Agregar Categoria"
        pos_hint: {'center_x':0.5}
        halign: "center"
        font_style: "Subtitle1"

    MDFillRoundFlatButton:
        text: "Nombre:"
        size_hint: (0.2,.7)
        pos_hint: {'center_x':0.2}
        id: id_insert_V_nom
        on_release: root.voz_boton('NombreC')

    TextInput:
        id: insertarcategoria_Nombre
        multiline: False
        hint_text: 'Nombre Categoria'
        mode: "rectangle"
        size_hint: (0.4,.7)
        pos_hint: {'center_x': .55}

    MDFillRoundFlatButton:
        text: "Descripcion:"
        size_hint: (0.2,.7)
        pos_hint: {'center_x':0.2}
        id: id_insert_V_des
        on_release: root.voz_boton('DescripC')

    TextInput:
        id: insertarcategoria_Descripcion
        multiline: True
        hint_text: 'Descripcion Categoria'
        mode: "rectangle"
        size_hint: (0.4,.7)
        pos_hint: {'center_x':0.55,'center_y':0.4}

    MDFillRoundFlatButton:
        text: "Fecha:"
        size_hint: (0.2,.7)
        pos_hint: {'center_x':0.2}

    TextInput:
        id: insertarcategoria_Fecha
        multiline: True
        hint_text: root.hoy
        mode: "rectangle"
        size_hint: (0.4,.7)
        pos_hint: {'center_x':0.55,'center_y':0.2}

    BoxLayout:
        size_hint_y: 2
    BoxLayout: # ---------- Crear Salir
        Button:
            text: 'Crear'
            on_press:
                root.insertcat()
        Button:
            text: 'Salir'
            on_release: root.back_to_dbw()

