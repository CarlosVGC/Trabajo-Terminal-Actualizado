<Inventario>:
    id: inventario_screen
    name: "inventario_screen"


<DataWid_Cat>:

    dataCat: ''
    dataCat_id: ''

    canvas:
        Color:
            rgb: 1,0.7,1 #rosa
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        size_hint: 0.9, 1
        size_font: self.width*0.2
        #text: 'Inventarios encontrados'
        text: root.dataCat
        on_press:
            app.el_idca = root.dataCat_id
            print (app.el_idca)
            root.database_produ()


    Button:
        size_hint: 0.3, 1
        text:'edit'
        on_press: root.update_data_Cat(root.dataCat_id)


<CategoriasWid>
    canvas:
        Color:
            #rgb: 1,0.7,1 #rosa
            rgb: (242/255, 244/255, 244/255)
        Rectangle:
            size: (500,550)
            #pos: self.pos
            pos: (150, 0 )

    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Categorias'
            halign: 'center'
            color: (0,128/255,0, 220/255)
            size_hint_y: None


        ScrollView:
            GridLayout:
                id: container
                size: (650,300)
                #padding_left, padding_top, padding_right, padding_bottom].
                padding: [160,0,100,50]
                spacing: 5
                size_hint: None,None
                cols: 1
                row_default_height: 70 #root.height*0.2
                height: self.minimum_height

        FloatLayout:
            size_hint: None,None
            size: (500,25)
            pos: (150,10)

<NuevoCatButton>
